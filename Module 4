package module4;

/**
 *
 * @author ASUS
 */

import java.util.Scanner; //sus
public class Perhitungan {
    public static void main(String[] args) {
        
        
       
        perhitunganhari();
        
        
    }

    private static void perhitunganhari() {
        Scanner input = new Scanner (System.in);//sin
        
        int hari,bulan,tahun,SatuTahun,SatuBulan;
        System.out.print("Jumpalh Hari : ");
        hari = input.nextInt();
        tahun = hari / 365;
        SatuTahun = hari % 365;
        bulan = SatuTahun / 30;
        SatuBulan = SatuTahun % 30;
        
        System.out.println(hari+" Hari : " + tahun + "Tahun : "+bulan+"Bulan : " +SatuBulan+"Hari : ");//sop
    }
    
}

package module4;

/**
 *
 * @author ASUS
 */
import java.util.Scanner;

public class PerhitunganHari{
    static Scanner input = new Scanner(System.in);

    public static void main(String[] args) {
        Input();
    }

    private static void Input() {
        int inputHari;

        System.out.print("Masukkan Jumlah Hari    =   ");
        inputHari = input.nextInt();
        Variable(inputHari);
    }

    public static void Variable(int input) {
        int tahun, sisatahun, bulan, sisabulan, sisahari;

        tahun = input / 365;
        sisatahun = input % 365;

        bulan = sisatahun/30;
        sisabulan = sisatahun%30;

        

        System.out.println("Hasil = " + tahun + " Tahun " + bulan + " Bulan " + sisabulan + " Hari");
    }
}



